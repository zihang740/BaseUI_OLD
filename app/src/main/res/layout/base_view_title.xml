<?xml version="1.0" encoding="utf-8"?>
<com.hzh.frame.widget.xtitleview.TitleView android:id="@+id/title"
                                           xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/base_title_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comn_title_left"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="14dp"
            android:scaleType="centerInside"
            android:src="@mipmap/base_back_white"/>

        <TextView
            android:id="@+id/comn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:maxWidth="160dp"
            android:text="标题"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/comn_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="48dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/comn_title_right_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:src="@mipmap/base_title_right_white_icon2"/>

            <TextView
                android:id="@+id/comn_title_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:text="消息"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>


</com.hzh.frame.widget.xtitleview.TitleView>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/rootTitleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_title_color"/>

        <FrameLayout
            android:id="@+id/rootViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.hzh.frame.widget.xrefresh.XSwipeRefreshLayout
            android:id="@+id/rootViewSwipeRefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

            <FrameLayout
                android:id="@+id/rootViewContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.hzh.frame.widget.xrefresh.XSwipeRefreshLayout>
    </LinearLayout>

</FrameLayout>